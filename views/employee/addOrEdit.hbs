<h3>{{viewTitle}}
    <a href="../../index.html">
        <i class="fa fa">
            Вернуться
        </i>
    </a>
</h3>

    <form action="/employee" method="POST" autocomplete="off">
        <input type="hidden" name="_id" value="{{employee._id}}">
        <div class="form-group">
            <label>ФИО</label>
            <input type="text" class="form-control" name="fullName" value="{{employee.fullName}}" placeholder="ФИО">
                        <div class="text-danger">
                {{employee.fullNameError}}
            </div>
        </div>
        <div class="form-group">
            <label>E-mail</label>
            <input type="email" class="form-control" name="email" value="{{employee.email}}" placeholder="Email">
            <div class="text-danger">
                    {{employee.emailError}}
                </div>
        </div>
        <div class="form-row">
            <div class="form-group md-6">
                <label>Номер телефона</label>
                <input type="text" name="mobile" placeholder="Номер телефона" value="{{employee.mobile}}" class="form-control">
                
             </div>
            <div class="form-group md-6">
                <label>Местоположение</label>
                <input type="text" name="location" placeholder="Местоположение" value="{{employee.location}}" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Отправить</button>
            <a href="/employee/list" class="btn btn-danger">
                <i class="fa fa-list-alt"></i> Все сотрудники
            </a>
        </div>


    </form>
